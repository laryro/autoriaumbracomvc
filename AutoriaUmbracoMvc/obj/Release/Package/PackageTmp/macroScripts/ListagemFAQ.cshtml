@inherits umbraco.MacroEngines.DynamicNodeContext
@{
    var faqs = Model.DescendantsOrSelf("FAQ").FirstOrDefault();
    var imagem = Library.MediaById(Model.imagem);
}

<img src="@imagem.Url" alt="@imagem.Name" />

<h1>FAQs</h1>

<div class="accordion">
    @foreach (var item in faqs.Children())
    {
        <h4>@item.pergunta</h4>
        <div class="richtext">@item.resposta</div>
    }
</div>