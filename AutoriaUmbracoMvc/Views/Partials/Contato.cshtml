@inherits Umbraco.Web.Mvc.UmbracoViewPage<AutoriaUmbracoMvc.Models.ContatoModel>
@using AutoriaUmbracoMvc.Helpers

@using (Html.BeginUmbracoForm("Contato", "Contato", null, new { role="form" }, FormMethod.Post ))
{
     var msg = ViewBag.sucesso;
    
    <h1>Contato</h1>
    
    if (msg != "" && msg != null)
    {
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            @msg
        </div>
    }
    if (Html.ValidationSummary() != null && Html.ValidationSummary().ToString() != "")
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>Não foi possível enviar sua mensagem. Encontramos o(s) seguinte(s) erro(s)</strong>
            <div class="mg_15_top">@Html.ValidationSummary()</div>
        </div>
    }

    
    <p>Preencha os campos abaixo para nos enviar um e-mail</p>
    <fieldset class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Nome) * 
            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Email) *
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Telefone) *
            @Html.TextBoxFor(m => m.Telefone, new { @class = "form-control tel" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Celular)
            @Html.TextBoxFor(m => m.Celular, new { @class = "form-control tel" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Assunto) * 
            @Html.DropDownListFor(m => m.Assunto, Model.Assuntos, new { @class = "form-control" })
        </div>
        <div class="mensagem form-group col-md-6">
            @Html.LabelFor(m => m.Mensagem) *
            @Html.TextAreaFor(m => m.Mensagem, new { @class = "form-control" }) 
        </div>
        <button type="submit" class="btn btn-primary pull-right mg_20">
            Enviar
        </button>
    </fieldset>

}