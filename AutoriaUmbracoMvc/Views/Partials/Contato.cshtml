@inherits Umbraco.Web.Mvc.UmbracoViewPage<AutoriaUmbracoMvc.Models.ContatoModel>

@using (Html.BeginUmbracoForm("Contato", "Contato", FormMethod.Post))
{
    
    <h3>Contato</h3>
            <p><strong>Preencha os campos abaixo para nos enviar um e-mail</strong></p>
                <div class="clear">
                    <ul class="simple-form">
                        <li>
                            @Html.LabelFor(m => m.Nome)
                            @Html.TextBoxFor(m => m.Nome)
                        </li>
                        <li>
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email)
                        </li>
                        <li>
                            @Html.LabelFor(m => m.Telefone)
                            @Html.TextBoxFor(m => m.Telefone)
                        </li>
                        <li>
                            @Html.LabelFor(m => m.Celular)
                            @Html.TextBoxFor(m => m.Celular)
                        </li>
                        <li>
                            @Html.LabelFor(m => m.Assunto)
                            @Html.DropDownListFor(m => m.Assunto, Model.Assuntos)
                        </li>
                        <li class="mensagem">
                            @Html.LabelFor(m => m.Mensagem)
                            @Html.TextAreaFor(m => m.Mensagem)
                        </li>
                        <li>
                            <input class="bt azul" type="submit" value="Enviar">
                        </li>
                    </ul>
                                            
                </div>
    
    
}