@inherits Umbraco.Web.Mvc.UmbracoViewPage<AutoriaUmbracoMvc.Models.EnvieRedacaoModel>
@using AutoriaUmbracoMvc.Helpers

@using (Html.BeginUmbracoForm("EnvieRedacao", "Contato", null, new { role = "form" }))
{

    var msg = ViewBag.sucesso;
    
    <h1>Contato</h1>
    
    if (msg != "" && msg != null)
    {
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            @msg
        </div>
    }
    if (Html.ValidationSummary().ToString() != "")
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>Não foi possível enviar sua mensagem. Encontramos o(s) seguinte(s) erro(s)</strong>
            <div class="mg_15_top">@Html.ValidationSummary()</div>
        </div>
    }

    <p>Preencha os campos abaixo para nos enviar um e-mail</p>
    <fieldset>
        <div class="row col-md-9 col-md-offset-1">
            <div class="form-group">
                @Html.LabelFor(m => m.Nome)
                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Anexo)
                @Html.FileUploadFor(m => m.Anexo, new { })
            </div>
            <button type="submit" class="btn btn-primary pull-right mg_20">
                Enviar
            </button>
        </div>
    </fieldset>
    
}