@inherits umbraco.MacroEngines.DynamicNodeContext

@{
    var imagem = Library.MediaById(Model.imagem);
}

<img src="@imagem.Url" class="img-destaque" />

<h1>@Model.titulo</h1>


@foreach (var curso in Model.Children())
{
    var imagemCurso = Library.MediaById(curso.imagem);
    <div class="row">
        <div class="col-md-4">
            <img src="@imagemCurso.Url" />
        </div>
        <div class="col-md-8">
            <p>
                @curso.descricao
            </p>
        </div>
    </div>
}
